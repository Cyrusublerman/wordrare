# API Keys
WORDNIK_API_KEY=your_wordnik_api_key_here
OXFORD_API_KEY=your_oxford_api_key_here
MERRIAM_WEBSTER_API_KEY=your_mw_api_key_here

# Database configuration
DATABASE_URL=sqlite:///databases/wordrare.db
# Or use PostgreSQL: postgresql://user:password@localhost/wordrare

# Data paths
PHRONTISTERY_URL=http://phrontistery.info/
CMU_DICT_PATH=data/raw/cmudict-0.7b
NGRAM_DATA_PATH=data/raw/ngrams/

# Model paths
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
# Or use a more powerful model: sentence-transformers/all-mpnet-base-v2

# Generation defaults
DEFAULT_RARITY_BIAS=0.5
DEFAULT_FORM=sonnet
MAX_REPAIR_ITERATIONS=5

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/wordrare.log
